\defbeamertemplate*{headline}{unicam theme}
{
\begin{tikzpicture}
\pgfcoordinate{A}{\pgfpoint{\paperwidth}{\framepagepageruler}}
\pgfcoordinate{topLeftLogo}{\pgfpoint{\paperwidth-1.325cm}{0.5\framepagepageruler+0.02cm}}
\pgfcoordinate{bottomRightLogo}{\pgfpoint{\paperwidth-\logorightgap+0.02cm}{0.5\framepagepageruler-1cm}}
\draw [fill=unicamred,draw=unicamred] (0.0,0.0) rectangle (A);
\draw [fill=white,draw=white] (topLeftLogo) rectangle (bottomRightLogo);
\pgftext[at=\pgfpoint{\paperwidth-\logorightgap}{0.5\framepagepageruler},right,top]{\pgfuseimage{unicamlogo}}
\end{tikzpicture}
}
